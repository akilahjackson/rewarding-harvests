{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],

    /* Module Settings */
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Node.js Support */
    "types": ["node"],

    /* Output Settings */
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["vite.config.ts"]
}
